	private String[] convertArray(Data tempData) {
		String[] arrTemp = new String[tempData.getColumnSize() - 1];
		for (int i = 0; i < tempData.getColumnSize() - 1; i++)
			arrTemp[i] = tempData.getValueInIndex(i);
		return arrTemp;
	}
